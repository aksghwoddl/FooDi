<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/maintenanceCalorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/swagger"
        android:textColor="#000"
        android:gravity="center"
        android:text="@string/maintenance_calorie"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:id="@+id/goalCalorieLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/maintenanceCalorie"
        >
        <TextView
            android:id="@+id/goalCalorieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/swagger"
            android:textColor="#000"
            android:gravity="center"
            android:text="@string/goal_calorie"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/editGoalCalorieImage"
            android:src="@drawable/ic_baseline_create_24"
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/heightInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/goalCalorieLayout"
        android:layout_marginTop="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/heightInputText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/height"
            android:background="#fff"
            android:fontFamily="@font/swagger"
            android:textColor="#000"
            android:layout_gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/weightLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heightInputLayout"
        android:layout_marginTop="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weightInputText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/weight"
            android:background="#fff"
            android:fontFamily="@font/swagger"
            android:textColor="#000"
            android:layout_gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/settingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/settingTimerButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/setting_timer"
            android:fontFamily="@font/swagger"
            android:layout_weight="1"
            />
       <com.google.android.material.switchmaterial.SwitchMaterial
           android:text="@string/setting_lock"
           android:id="@+id/settingLockSwitch"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:fontFamily="@font/swagger"
           android:textColor="#fff"
           android:background="@color/main_color"
           android:layout_weight="1"
           />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>