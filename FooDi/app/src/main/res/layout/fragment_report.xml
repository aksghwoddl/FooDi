<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:id="@+id/reportScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/averageCalorieTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_toolbar_height"
                android:background="@color/main_color"
                >
                <Spinner
                    android:id="@+id/reportSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/reportGraphLayout"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/averageCalorieTextView"
        android:text="@string/average_calorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/swagger"
        android:textColor="#000"
        android:padding="10dp"
        android:background="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>