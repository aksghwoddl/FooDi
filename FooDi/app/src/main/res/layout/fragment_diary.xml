<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@+id/headerToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_toolbar_height"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/main_color"
        >

        <TextView
            android:id="@+id/headerSearchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:fontFamily="@font/swagger"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_baseline_search_24"
            android:layout_marginEnd="5dp"
            android:theme="@style/Theme.AppCompat"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nutritionSummaryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:weightSum="2"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:weightSum="3"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:background="@drawable/border_textview"
           >
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               tools:ignore="NestedWeights"
               android:text="@string/common_carbohydrate"
               android:gravity="center"
               android:fontFamily="@font/swagger"
               android:background="@drawable/border_textview"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/common_protein"
               android:gravity="center"
               android:fontFamily="@font/swagger"
               android:background="@drawable/border_textview"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="@string/common_fat"
               android:gravity="center"
               android:fontFamily="@font/swagger"
               android:background="@drawable/border_textview"
               />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_textview"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedWeights"
                android:background="@drawable/border_textview"
                android:fontFamily="@font/swagger"
                android:textSize="15sp"
                android:text="@string/zero_gram"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:fontFamily="@font/swagger"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/zero_gram"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:fontFamily="@font/swagger"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/zero_gram"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noDiaryItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/noDiaryItemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_diary_item"
            android:gravity="center"
            android:fontFamily="@font/swagger"
            android:textColor="#000"
            android:textSize="@dimen/no_item_text_size"
            />
        <Button
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_add_circle_24"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/calorieLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/goalCalorieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_calorie"
                android:fontFamily="@font/swagger"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/spendCalorieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spend_calorie"
                android:fontFamily="@font/swagger"
                android:textColor="#000"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/spendCalorieProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="20"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>