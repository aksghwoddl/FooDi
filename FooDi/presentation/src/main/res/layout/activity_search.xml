<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="searchViewModel"
            type="com.lee.foodi.ui.activities.search.viewmodel.SearchFoodViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateTint="@color/black"
            android:visibility="gone"
            android:elevation="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchInputTextLayout"
            android:background="@color/main_color"
            >
            <TextView
                android:id="@+id/reportTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/swagger"
                android:text="@string/search"
                android:textColor="@color/text_colors"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:backgroundTint="@color/main_color"
                />
        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchInputTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_baseline_search_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/search_edit_text_hint"
                android:fontFamily="@font/swagger"
                android:background="@color/search_background_color"
                android:singleLine="true"
                android:text="@={searchViewModel.searchFoodName}"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchFoodRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/search_food_item"
            app:layout_constraintTop_toBottomOf="@id/searchInputTextLayout"
            app:layout_constraintBottom_toTopOf="@id/buttonLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/previousButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_arrow_circle_left_24"
                android:layout_marginStart="20dp"
                android:enabled="false"
                />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_arrow_circle_right_24"
                android:enabled="false"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/noSearchFoodLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/searchInputTextLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/noSearchFoodTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_search_food"
                android:gravity="center"
                android:textSize="@dimen/no_item_text_size"
                android:fontFamily="@font/swagger"
                android:textColor="@color/text_colors"
                />

            <ImageButton
                android:id="@+id/addFoodButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_add_circle_24_new"
                android:backgroundTint="@color/image_button_background_color"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
